# Recchx Frontend Environment Variables
# Copy this file to .env.local and update with your values

# API Base URL
NEXT_PUBLIC_API_URL=https://recchx-d32fdfb574a8.herokuapp.com

# Google OAuth2 Client ID (for "Sign in with Google" button)
# Get this from Google Cloud Console: https://console.cloud.google.com/apis/credentials
# Must match the Google Client ID configured in your backend
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# App Configuration
NEXT_PUBLIC_APP_NAME=Recchx
NEXT_PUBLIC_APP_VERSION=1.0.0

# Features Flags (optional)
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_JOB_SEARCH=true
NEXT_PUBLIC_ENABLE_APPLICATIONS=true

# Development Mode
NEXT_PUBLIC_DEV_MODE=false
